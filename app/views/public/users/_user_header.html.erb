<div class="col-sm-4 text-center">
  <div class="row mb-3">
    <div class="co-sm-4 offset-sm-4">
      <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.png", size: "100x100", class:"rounded-circle" %>
    </div>
  </div>
  <div class="row">
    <div class="col-4 offset-2"><%= link_to followings_path do %><%= band.followings.count %>フォロー中<% end %></div>
    <div class="col-4"><%= link_to followers_path do %><%= band.follower_ids.count %>フォロワー<% end %></div>
  </div>
</div>
　<div class="col-sm-4">
　   <table>
    <tbody>
      <tr>
        <td><%= User.human_attribute_name(:user_name)%></td>
        <td> : <%= user.user_name%></td>
      </tr>
      <tr>
        <td><%= User.human_attribute_name(:email)%></td>
        <td> : <%= user.email%></td>
      </tr>
      <tr>
        <td><%= Band.human_attribute_name(:band_name)%></td>
        <td> : <%= band.band_name%></td>
      </tr>
    </tbody>
  </table>
</div>
<div class="offset-sm-1 col-sm-2">
  <% if current_live_house || current_admin || user.current_user?(current_user) %>
    <%= link_to "Edit",edit_mypage_path(user), remote: true, class: "btn btn-lg, btn-primary" %>
  <% else %>
    <%= render 'public/relationships/follow_button', band: band %>
  <% end %>
</div>