<div class="col-lg-5 text-center">
  <div class="row mb-3">
      <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.png", size: "100x100", class:"rounded-circle mx-auto" %>
  </div>
  <div class="row">
    <div class="col-6"><%= link_to followings_path(id: band.user.id) do %><%= band.followings.count %>フォロー中<% end %></div>
    <div class="col-6"><%= link_to followers_path(id: band.user.id) do %><%= band.follower_ids.count %>フォロワー<% end %></div>
  </div>
</div>

<div class="col-lg-6">
　<table>
    <tbody>
      <tr>
        <td><%= User.human_attribute_name(:user_name)%></td>
        <td> : <%= user.user_name%></td>
      </tr>
      <tr>
        <td><%= User.human_attribute_name(:email)%></td>
        <td> : <%= user.email%></td>
      </tr>
      <tr>
        <td><%= Band.human_attribute_name(:band_name)%></td>
        <td> : <%= band.band_name%></td>
      </tr>
    </tbody>
  </table>
</div>