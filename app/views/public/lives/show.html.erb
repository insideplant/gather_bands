
    <div class="card-list">
        <div class="card mx-auto mt-4 shadou-lg">
          <div class="card-body row">
            <div class="col-2">
              <%#= attachment_image_tag article.band.user, :profile_image, size: "60x60" , fallback: "no_image.png" ,
                size: "60x60" , class:"mt-2 rounded-circle"%>
            </div>
            <div class="col-10">
              <div class="row">
                <h1><%= @live.live_name%></h1>
              </div>
              <div class="row">
                <table>
                  <tbody>
                    <tr>
                      <td>ホスト名</td>
                      <td>：<%= @host_band.band_name%></td>
                    </tr>
                    <tr>
                      <td>メンバー</td>
                      <td>
                      ：<% @host_band.members.each do |member| %>
                       <%= member.name%>
                       <% end %>
                      </td>
                    </tr>
                    <tr>
                      <td>募集人数</td>
                      <td>：<%= @live.amount %></td>
                    </tr>
                    <tr>
                      <td>開催予定日</td>
                      <td>：<%= @live.lecture_at %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="row">
                <%= link_to '参加', lives_path(@live), method: :post, class:"btn btn-primary"%>
              </div>
            </div>
          </div>
        </div>
    </div>