<div class="row">
  <aside class="col-md-4">
    <section class="band_info">
      <h1>
        <%#= gravatar_for @user %>
        <%= @band.band_name%>
      </h1>
  <table>
    <tbody>
        <tr>
          <td>バンド名　：</td>
          <td><%= @band.band_name%></td>
        </tr>
          <td>ユーザー名：</td>
          <td><%= @user.user_name%></td>
        <tr>
          <td>メンバー　：</td>
          <td>
            <% @members.each do |member|%>
            <%= member.role%>
            <%= member.name%>
            <% end %>
            <%= link_to "Edit",edit_band_path(@band) %>
          </td>
        </tr>
      </tbody>
    </table>
    </section>
  </aside>

</div>

<div>
<% @bands.each do |band| %>
<div>
<%= band.band_name%>
<%= band.user.user_name%>
</div>
<% end %>
</div>