<div class="row">
  <aside class="col-md-4">
    <section class="band_info">
      <h1>
        <%#= gravatar_for @user %>
        <%= @band.band_name%>
      </h1>
  <table>
    <tbody>
        <tr>
          <td>バンド名　：</td>
          <td><%= @band.band_name%></td>
        </tr>
          <td>ユーザー名：</td>
          <td><%= @user.user_name%></td>
        <tr>
          <td>メンバー　：</td>
          <td>
            <% @members.each do |member|%>
            <%= member.name%>
            <% end %>
            <%= link_to "Edit",edit_band_path(@band) %>
          </td>
        </tr>
      </tbody>
    </table>
    </section>
  </aside>

  <% @live_organizations.each do |live_organization| %>
<div>
バンド名：<%= link_to live_organization.band.band_name,live_organization_path(live_organization)%></br>
ライブ名：<%= live_organization.live_name%></br>
募集人数：<%= live_organization.amount%></br>
ライブスケジュール：<%= live_organization.lecture_at%></br>
ライブ詳細：<%= live_organization.organize_introduction%>
</div>
<% end %>

<%= link_to "new Live",new_live_organization_path %>
</div>