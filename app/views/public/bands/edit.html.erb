<h1>Public::Bands#edit</h1>
<p>Find me in app/views/public/user_bands/edit.html.erb</p>

<div>
<%= form_with model: @band, url: band_member_path(@band, member_id: @member.id), local:true do |f| %>
<%= f.label :band_name %>
<%= f.text_field :band_name %>

<div>
<%= f.fields_for :members, @member do |member| %>
  <%= member.label :role %>
  <%= member.text_field :role %>
  <%= member.label :name %>
  <%= member.text_field :name %>

  <p id="output"></p>
  <%= button_to "削除する"%>
  <%= button_tag "追加する" ,type: 'button', class:"add-form-btn" %>
<% end %>
</div>

<%= f.submit "create" %>
<% end %>
</div>

<%= javascript_include_tag "javascript.js" %>