<div class="live_image">
  <div id="images">
      <div class="live1"></div>
      <div class="live2"></div>
      <div class="live3"></div>
      <div class="live4"></div>
  </div>
</div>

<div class="container">

<div class="card" style="width: 18rem;">
  <svg class="bd-placeholder-img card-img-top" width="100%" height="100" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect fill="#868e96" width="100%" height="100%"/><text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image cap</text></svg>
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>

  <div class="col-8">
    <div class="card-list">
      <% @lives.each do |live| %>
        <%= link_to life_path(live) do%>
        <div class="card w-auto mx-auto mt-4 shadou-lg">
          <div class="card-body row">
            <div class="col-2">
              <%#= attachment_image_tag article.band.user, :profile_image, size: "60x60" , fallback: "no_image.png" ,
                size: "60x60" , class:"mt-2 rounded-circle"%>
            </div>
            <div class="col-10">
              <div class="row">
                <h1><%= live.live_name%></h1>
              </div>
              <div class="row">
                <table>
                  <tbody>
                    <tr>
                      <td>ホスト名</td>
                      <td>：<%= %></td>
                    </tr>
                    <tr>
                      <td>募集人数</td>
                      <td>：<%= live.amount %></td>
                    </tr>
                    <tr>
                      <td>開催予定日</td>
                      <td>：<%= live.lecture_at %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="row">
                <%= %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>

</div>


