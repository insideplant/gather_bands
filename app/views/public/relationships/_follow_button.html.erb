<% unless current_user.band == band %>
  <% if current_user.band.following?(band) %>
    <%= form_for(current_user.band.relationships.find_by(follow_id: band.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, band.id %>
      <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.band.relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, band.id %>
      <%= f.submit 'Follow', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>
