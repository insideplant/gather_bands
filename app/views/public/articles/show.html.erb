<div class="container">
  <div class="row">
    <div class="row col-sm-9 offset-sm-2">
      <div class="col-3">
        <div class="row">
          <%= attachment_image_tag @article.band.user, :profile_image, size: "60x60" , fallback: "no_image.png" ,size: "60x60" , class:"mt-2 rounded-circle"%>
        </div>
        <div class="row">
          <%= link_to @article.band.band_name, mypage_path(@article.band.user) %>
        </div>
      </div>
      <div class="col-9 d-flex align-items-center">
         <%= @article.content %>
      </div>
    </div>
    <div class="col-sm-9 offset-sm-2">
      <div id="iine<%=@article.id%>">
        <%= render "favorite", article: @article %>
      </div>

      <div class="form-group">
        <%= form_with(model: [@article, @comment], local: true) do |f|%>
          <%= f.label :コメント, class: "form7" %>
          <%= f.text_area :content, class:"form-control-plaintext",placeholder:"coment" %>
          <%= f.submit "返信", class:"btn btn-primary mt-3" %>
        <% end %>
      </div>
    </div>

    <div class="col-sm-9 offset-sm-2">
      <% @comments.each do |comment|%>
      <div class="border-top border-white">
        <%= comment.content %>
      </div>
      <% end %>
    </div>
  </div>
</div>