<h1>Article::Articles#index</h1>
<p>Find me in app/views/public/posts/index.html.erb</p>

<div class="row">
  <%= form_with model:@article, url:articles_path,local:true do |f| %>

  <div class="form-group">
    <%= f.label :content, @user.band.band_name %>
    <%= f.text_area :content, class:"form-control" %>
    <%= f.hidden_field :band_id, :value => @user.band.id %>
  </div>

  <%= f.submit "投稿", class:"btn btn-primary"%>
  <% end %>
</div>


<div class="card-list-comtainer py-5">
  <% @articles.each do |article| %>
  <div class="card w-50 mx-auto mt-4 shadou-lg">
   <div class="card-body">
    <%= link_to article_path(article) do%>
    <div class="row">
      <div class="col-2">
      <%= attachment_image_tag article.band.user, :profile_image, size: "60x60", fallback: "no_image.png", size: "60x60", class:"mt-2 rounded-circle"%>
      </div>
      <div class="col-10">
        <div class="row">
          <%= article.band.band_name%>
        </div>
        <div class="row">
          <%= article.content%>
        </div>
        <span><%= link_to "#{article.comments.count} コメント", class:"text-dark" %></span>
      </div>
    </div>
      <% end %>
   </div>
  </div>
  <% end %>
</div>
