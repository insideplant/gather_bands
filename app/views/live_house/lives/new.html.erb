<div class="container">

    <h1 class="mb-5"><%= current_live_house.house_name%></h1>

    <%= form_with(model: @live, local: true) do |f| %>
      <div class="modal fade" id="new2_live">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">New live</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div id="calendar_wrapper">
                <div id="calendar">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :start_at, "Non Live", class: "form-control-label col-sm-2 col-form-label"%>
        <div class="col-sm-3">
          <%= f.text_field :start_at, class: "form-control input-start"%>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :end_at, class: "form-control input-end"%>
        </div>
        <div class="col-sm-3">
          <%= link_to "calendar",calendar_path, remote: true, class: "btn btn-lg, btn-primary" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :introduction, "ライブ詳細", class: "form-control-label col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= f.text_area :introduction , class:"form-control" %>
        </div>
      </div>

      <div class="form-group text-right">
        <%= f.submit "入力完了", class: "btn btn-primary" %>
      </div>
    <% end %>
</div>

<script>

draw_calendar();
function draw_calendar() {
   var current_id = document.getElementById("live_live_house_id").value;

   $('#calendar').fullCalendar({
     selectable: true,
     header: {
       left: 'prev',
       center: 'title',
     },
     events: "/live_houses/" + current_id + ".json",//"lives/new.json"

     eventOverlap: false,
     validRange: function(nowDate){
       return {
       start: nowDate.clone().add(6, 'months'),
       end: nowDate.clone().add(24, 'months')
       };
     },

     color: 'yellow',
     textColor: 'black',

     select: function(startDate, endDate) {
       $('#new_live').modal('show');
       $(".input-start").val(moment(startDate).format("YYYY-MM-DD"));
       //$(".input-end").val(moment(endDate).format("YYYY-MM-DD"));
     }
   });
}
</script>