<!DOCTYPE html>
<html>
  <head>
    <title>GatherBands</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
          <%= link_to "sample app", root_path, id: "GatherBands" %>
          <nav>
        　　<ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
             <li><%= link_to "Top",root_path %></li>
             <li><%= link_to "mypage",users_mypage_path %></li>
             <li><%= link_to "posts",articles_path %></li>
             <li><%= link_to "bands",bands_path %></li>
             <li><%= link_to "Log out",destroy_user_session_path, method: :delete %></li>
            <% elsif admin_signed_in? %>
             <li><%= link_to "Log out",destroy_user_session_path, method: :delete %></li>
            <% else %>
             <li><%= link_to "Sign up",new_user_registration_path %></li>
             <li><%= link_to "Log in",new_user_session_path %></li>
             <li><%= link_to "About",about_path %></li>
             <li><%= link_to "live",lives_path %></li>
            <% end %>
            </ul>
          </nav>
      </div>
    </header>
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
