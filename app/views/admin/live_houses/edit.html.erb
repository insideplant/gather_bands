  <%= form_with model:@live_house, url:admin_live_house_path(@live_house), local:true do |f| %>
   <div class="form-group">
   <label>Picture</label>
   <%= f.attachment_field :image%>
   </div>

   <div class="form-group">
   <label>name</label>
   <%= f.text_field :house_name, class:"form-control"  %>
   </div>

   <div class="form-group">
   <label>Postal Code</label>
   <%= f.text_area :postal_code, class:"form-control"  %>
   </div>

   <div class="form-group">
   <label>address</label>
   <%= f.text_area :address, class:"form-control"  %>
   </div>

   <div class="form-group">
   <label>TELL</label>
   <%= f.text_area :telephone_number, class:"form-control"  %>
   </div>

   <div class="form-group">
   <label>price</label>
   <%= f.text_field :price, class:"form-control" %>
   </div>

   <div class="form-group">
   <label>website</label>
   <%= f.text_field :website, class:"form-control" %>
   </div>

   <div class="form-group">
   <label>status</label></br>
   open <%= f.radio_button :is_active, :true, checked: true %>
   close <%= f.radio_button :is_active, :false %>
   </div>

   <%= f.submit 'Update', class:"btn btn-secondary btn-md" %>
  <% end %>