<div class="container">
 
 <h1>Live Houses</h1>
 <div class="row"><%= link_to " 新規登録", new_admin_live_house_path, class:"btn btn-secondary btn-sm mb-3" %></div>

 <div class="row">
  <table class="table table-dark table-sm">
   <thead class="thead-dark">
    <tr>
     <th>live house ID</th>
     <th>name</th>
     <th>税抜価格</th>
     <th>Scadule</th>
     <th>status</th>
    </tr>
   </thead>
   <thody>
    <% @live_houses.each do |live_house| %>
     <tr>
      <td><%= live_house.id %></td>
      <td><%= link_to live_house.house_name, admin_live_house_path(live_house) %></td>
      <td><%= converting_to_jpy(live_house.price) %></td>
      <td>scadule</td>
      <td><%= live_house.is_active %></td>
    </tr>
    <% end %>
   </thody>
  </table>
 </div>
</div>