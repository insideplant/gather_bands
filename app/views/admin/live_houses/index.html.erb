<div class="container">

	<h1>Live Houses</h1>

	<div class="row">
		<table class="table table-dark table-sm">
			<thead class="thead-dark">
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Price</th>
					<th>Scadule</th>
					<th>Status</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				<% @live_houses.each do |live_house| %>
					<tr>
						<td><%= live_house.id %></td>
						<td><%= link_to live_house.house_name, admin_live_house_path(live_house) %></td>
						<td><%= converting_to_jpy(live_house.price) %></td>
						<td>scadule</td>
						<td><%= live_house.is_active %></td>
						<td><%= link_to "Edit", edit_admin_live_house_path(live_house), class:"btn btn-success btn-sm" %></td>
						<td><%= link_to "Delete",admin_live_house_path(live_house), method: :delete, class:"btn btn-danger btn-sm" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>